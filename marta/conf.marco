

behavior {
    theme "Kon"
    
    
    layout {
        alwaysShowTabBar false
        showActionBar false
    }
    
    quickSelect {
        activateOnAnyCharacter false
        }
    table {

        defaults {

            showHiddenFiles true

            }
    }
}


keyBindings {
    "Cmd+O" "core.actions"
    "O" "core.go"
    "Shift+7" "core.lookup.here"
    "Ctrl+F" "core.lookup"
    "H" "core.go.up"
    "L" "core.open"
    "K" "core.move.up"
    "J" "core.move.down"
    "D" "core.delete"
    "S" "core.select.move.down"
    "Y" "core.clipboard.copy"
    "P" "core.clipboard.paste"
    "M" "core.move"
    "C" "core.rename"
    "R" "core.refresh"
    "Shift+N" "core.new.folder"
    "N" "core.new.file"
    "Ctrl+U" "core.move.half.page.up"
    "Ctrl+D" "core.move.half.page.down"
    "I" "core.finder.showInfo"
    "Shift+Y" "core.path.folder"
    "0" "core.hierarchy"
    "1" "core.volumes"
    "2" "core.favorites"
    "Shift+2" "core.favorites.add"
    "3" "core.recent"
    "Q" "core.tab.close"
    "U" {
        id "core.disk.usage"
        mode "samePane"
        src "."
    }

    }


behavior {
    theme "Kon"
    
    
    layout {
        alwaysShowTabBar false
        showActionBar false
    }
    
    quickSelect {
        activateOnAnyCharacter false
        }
    table {

        defaults {

            showHiddenFiles true

            }
    }
}


keyBindings {
    "Cmd+O" "core.actions"
    "Shift+7" "core.lookup.here"
    "Ctrl+F" "core.lookup"
    "H" "core.go.up"
    "L" "core.open"
    "K" "core.move.up"
    "J" "core.move.down"
    "D" "core.delete"
    "Y" "core.clipboard.copy"
    "P" "core.clipboard.paste"
    "Ctrl+U" "core.move.half.page.up"
    "Ctrl+D" "core.move.half.page.down"


    }